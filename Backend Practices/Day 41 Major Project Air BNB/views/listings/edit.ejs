<% layout('./layouts/boilerplate.ejs') %>
<body>
  <div class="row">
    <div class="col-8 offset-2">
      <h1>Edit listing</h1>
      <form method="post" action="/listings/<%= listing._id %>?_method=PUT" class="needs-validation" novalidate>
        <div class="mb-3">
          <label for="title" class="form-label">Title</label>
          <input
            id="title"
            type="text"
            value="<%= listing.title %>"
            name="listing[title]"
            placeholder="enter new title"
            class="form-control"
            required
          />
          <div class="valid-feedback">Title looks good!</div>
          <div class="invalid-feedback">Please enter a valid title</div>
        </div>

        <div class="mb-3">
          <label for="description" class="form-label">Description</label>
          <textarea
            id="description"
            class="form-control"
            cols="35"
            rows="5"
            name="listing[description]"
            required
          >
    <%= listing.description %></textarea
          >
          <div class="valid-feedback">Description looks good!</div>
          <div class="invalid-feedback">Please enter valid description</div>
        </div>

        <div class="mb-3">
          <label for="image-url" class="form-label">Image-URL</label>
          <input
            id="image-url"
            class="form-control"
            type="text"
            value="<%= listing.image.url %>"
            name="listing[image][url]"
            placeholder="enter new image"
            required
          />
          <div class="invalid-feedback">Please enter valid iamge URL</div>
        </div>

        <div class="row">
          <div class="mb-3 col-md-4">
            <label for="price" class="form-label">Price</label>
            <input
              id="price"
              class="form-control"
              type="number"
              value="<%= listing.price %>"
              name="listing[price]"
              placeholder="enter new price"
              required
            />
            <div class="valid-feedback">Price looks good!</div>
          <div class="invalid-feedback">Please enter a valid Price</div>
          </div>

          <div class="mb-3 col-md-8">
            <label for="country" class="form-label">Country</label>
            <input
              id="country"
              class="form-control"
              type="text"
              value="<%= listing.country %>"
              name="listing[country]"
              placeholder="enter new country"
              required
            />
            <div class="valid-feedback">Country looks good!</div>
          <div class="invalid-feedback">Country name should be valid</div>
          </div>
        </div>

        <div class="mb-3">
          <label for="location" class="form-label">Location</label>
          <input
            id="location"
            class="form-control"
            type="text"
            value="<%= listing.location %>"
            name="listing[location]"
            placeholder="enter new location"
            required
          />
          <div class="valid-feedback">Location looks good!</div>
          <div class="invalid-feedback">Location should be valid</div>
        </div>
        <button class="btn btn-dark edit-btn mt-3 mb-3" type="submit">
          Confirm Edit
        </button>
      </form>
    </div>
  </div>
</body>
