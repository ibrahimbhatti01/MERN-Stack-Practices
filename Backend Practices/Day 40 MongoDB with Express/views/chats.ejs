<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Whatsapp</title>
    <link rel="stylesheet" href="/style.css">
</head>
<body>
    <form action="/chats/new" method="get">
        <button type="submit">New Chat</button>
    </form>
    <div class="chat-container">
        <% for(chat of chats){ %>
            <div class="chat"> 
                <p class="p">From: <i><%= chat.from %></i></p>
                <div class="message">
                    <p class="p"><%= chat.message %></p>
                    
                    <!-- <form action="/chats/<%= chat._id %>/delete?_method=DELETE" method="post">
                        <button type="submit">Delete</button>
                    </form> -->
                </div>

                <form action="/chats/<%= chat._id %>" method="get">
                    <button class="show-button" type="submit">Show</button>
                </form>

                <form action="/chats/<%= chat._id %>/edit" method="get">
                    <button class="edit-button" type="submit">Edit</button>
                </form>

                <!-- Checkbox to control modal visibility -->
                <input type="checkbox" id="delete-confirm-<%= chat._id %>" class="delete-confirm-checkbox" />
                <label for="delete-confirm-<%= chat._id %>" class="delete-button">Delete</label>

                    <!-- Modal -->
                <div class="modal">
                    <div class="modal-content">
                        <p>Are you sure you want to delete this message?</p>
                        <form action="/chats/<%= chat._id %>/delete?_method=DELETE" method="post">
                            <button type="submit">Yes, delete</button>
                        </form>
                        <label for="delete-confirm-<%= chat._id %>">Cancel</label>
                    </div>
                </div>
                <p class="p">Received by <i><%= chat.to %></i></p>
            <hr>
                <p><%= chat.createdAt.toString().split(" ")[4] %></p>
                <p><%= chat.createdAt.toString().split(" ").slice(0, 4).join(" ") %></p>
            </div>
        <% } %>
    </div>
</body>
</html>